generator client {
    provider = "prisma-client"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model Course {
    id          String   @id @default(uuid()) @db.Uuid
    name        String
    description String
    value       Float
    teacherId   String
    category    String
    level       String
    duration    Int // Duração em horas
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    modules     Module[]

    @@map("courses")
}

model Module {
    id          String   @id @default(uuid()) @db.Uuid
    courseId    String   @db.Uuid
    title       String
    description String?
    order       Int // Ordem do módulo no curso
    content     String // Conteúdo do módulo
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

    @@map("modules")
}
